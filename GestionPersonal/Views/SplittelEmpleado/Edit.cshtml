@model GPSInformation.Models.Empleado

@{
    ViewData["Title"] = "Edit";
}
<form id="EditSplittelEmpleadoForm">
    <div data-label="Informacion" class="df-example demo-forms">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <label asp-for="NumeroNomina" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="hidden" asp-for="IdPersona" class="form-control" />
                <input type="hidden" asp-for="IdEmpleado" class="form-control" />
                <input type="number" asp-for="NumeroNomina" class="form-control" />
                <span asp-validation-for="NumeroNomina" class="text-danger"></span>
            </div>
            <label asp-for="TipoNomina" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="TipoNomina" asp-items="ViewBag.TipoNomina" class="form-control select2">
                    <option value="0">Selecciona un tipo de sangre</option>
                </select>
                <span asp-validation-for="TipoNomina" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="IdSociedad" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="IdSociedad" asp-items="ViewBag.Sociedades" class="form-control select2">
                    <option value="0">Selecciona un tipo de sangre</option>
                </select>
                <span asp-validation-for="IdSociedad" class="text-danger"></span>
            </div>
            <label asp-for="IdDepartamento" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="IdDepartamento" asp-items="ViewBag.Departamentos" class="form-control select2">
                    <option value="0">Selecciona un tipo de sangre</option>
                </select>
                <span asp-validation-for="IdDepartamento" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="IdPuesto" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="IdPuesto" asp-items="ViewBag.Puestos" class="form-control select2">
                    <option value="0">Selecciona un tipo de sangre</option>
                </select>
                <span asp-validation-for="IdPuesto" class="text-danger"></span>
            </div>
            <label asp-for="Salario" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="Ingreso" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="date" asp-for="Ingreso" class="form-control" />
                <span asp-validation-for="Ingreso" class="text-danger"></span>
            </div>
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="Extension" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="number" asp-for="Extension" class="form-control" />
                <span asp-validation-for="Extension" class="text-danger"></span>
            </div>
            <label asp-for="IdEstatus" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="IdEstatus" asp-items="ViewBag.Puestos" class="form-control select2">
                    <option value="0">Selecciona un tipo de sangre</option>
                </select>
                <span asp-validation-for="IdEstatus" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mg-b-0">
            <div class="col-sm-12 text-right">
                <button type="reset" class="btn btn-sm btn-secondary">Cancelar</button>
                <button type="button" onclick="App_editEmpleado.EditSplittelEmpleado()" class="btn btn-sm btn-primary">Actualizar información</button>
            </div>
        </div>
    </div>

</form>
