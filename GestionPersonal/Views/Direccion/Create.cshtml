@model GPSInformation.Models.Direccion

@{
    ViewData["Title"] = "Crear nueva dirección";
}
<h1>@ViewData["Title"]</h1>
    <div data-label="Informacion" class="df-example demo-forms">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Nombre" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="hidden" asp-for="IdDireccion" class="form-control" />
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="IdSociedad" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="IdSociedad" asp-items="ViewBag.Sociedades" class="custom-select">
                        <option value="0">Sociedad raiz</option>
                    </select>
                    <span asp-validation-for="IdSociedad" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="DireccionParent" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="DireccionParent" asp-items="ViewBag.Direcciones" class="custom-select">
                        <option value="0">Selecciona una opción</option>
                    </select>
                    <span asp-validation-for="DireccionParent" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mg-b-0">
                <div class="col-sm-12 text-right">
                    <a href="@Url.Action("Index","Direccion")" class="btn btn-sm btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
                </div>
            </div>
        </form>
    </div>

