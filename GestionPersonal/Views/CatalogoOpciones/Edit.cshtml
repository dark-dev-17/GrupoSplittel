@model GPSInformation.Models.CatalogoOpciones

@{
    ViewData["Title"] = "Editar catalogo ";
}
    <div data-label="Detalle del catalogo" class="df-example demo-forms">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Descripcion" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="hidden" asp-for="IdCatalogoOpciones" class="form-control" placeholder="descripción">
                    <input asp-for="Descripcion" class="form-control" placeholder="descripción">
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mg-b-0">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-sm btn-secondary" asp-action="Index">Back to List</a>
                    <button type="submit" class="btn btn-sm btn-primary">Actualizar</button>
                </div>
            </div>
        </form>
    </div>
    <div data-label="Valores del catalogo" class="df-example demo-forms">
        <div class="col-sm-12 text-right">
            <a href="@Url.Action("CreateValue","CatalogoOpciones", new { id = Model.IdCatalogoOpciones })" class="btn btn-sm btn-primary mb-3">Agregar nuevo valor</a>
        </div>
        
        <partial name="./ListaValores" model="ViewBag.Valores" />
    </div>
