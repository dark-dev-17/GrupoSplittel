@model GPSInformation.Models.CatalogoOpcionesValores
@{
    ViewData["Title"] = "Editar valor";
}
<div data-label="Detalle del valor" class="df-example demo-forms">
    <form asp-action="EditValue">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="IdCatalogoOpciones" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="hidden" asp-for="IdCatalogoOpcionesValores" class="form-control" placeholder="descripción">
                <select asp-for="IdCatalogoOpciones" asp-items="ViewBag.OpcionesCatalogos" class="custom-select">
                </select>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Descripcion" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Descripcion" class="form-control" placeholder="descripción">
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mg-b-0">
            <div class="col-sm-12 text-right">
                <a href="@Url.Action("Edit","CatalogoOpciones", new { id = Model.IdCatalogoOpciones })" class="btn btn-sm btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
            </div>
        </div>
    </form>
</div>