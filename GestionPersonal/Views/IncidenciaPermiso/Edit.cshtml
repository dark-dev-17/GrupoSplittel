@model GPSInformation.Models.IncidenciaPermiso

@{
    ViewData["Title"] = "Edit";
}
    <div data-label="Crear Nuevo" class="df-example demo-forms">
        @await Component.InvokeAsync("EmpleadoBasic", new { id = Model.IdPersona })
        <div class="alert alert-primary d-flex align-items-center mt-3 mb-3" role="alert">
            <i data-feather="alert-circle" class="mg-r-10"></i> Tu permiso fue creado!
        </div>
        <hr />
        <form id="crearPermiso">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group row">
                <label asp-for="Fecha" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    @*<input type="hidden" asp-for="IdPersona" class="form-control" />*@
                    <input type="hidden" asp-for="IdPersona" class="form-control" disabled />
                    <input type="date" asp-for="Fecha" class="form-control" disabled />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Inicio" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="time" asp-for="Inicio" class="form-control" disabled />
                    <span asp-validation-for="Inicio" class="text-danger"></span>
                </div>
                <label asp-for="Fin" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="time" asp-for="Fin" class="form-control" disabled />
                    <span asp-validation-for="Fin" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="IdAsunto" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="IdAsunto" asp-items="ViewBag.TiposPermisos" disabled onchange="" class="form-control select2">
                        <option value="0">Selecciona una opción</option>
                    </select>
                    <span asp-validation-for="IdAsunto" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="DescripcionAsunto" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="DescripcionAsunto" class="form-control" disabled></textarea>
                    <span asp-validation-for="DescripcionAsunto" class="text-danger"></span>
                </div>

            </div>
            @if (Model.IdAsunto == 36)
            {
                <div class="form-group row" id="PermisoPago">
                    <label asp-for="IdPagoPermiso" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select asp-for="IdPagoPermiso" asp-items="ViewBag.PagoPermisoPersonal" disabled class="form-control select2">
                            <option value="0">Selecciona una opción</option>
                        </select>
                        <span asp-validation-for="IdPagoPermiso" class="text-danger"></span>
                    </div>
                </div>
            }

            @*<div class="form-group row mg-b-0">
            <div class="col-sm-12 text-right">
                <button type="reset" class="btn btn-sm btn-secondary">Cancelar</button>
                <button type="button" onclick="app_incidencias.CrearPermiso()" class="btn btn-sm btn-primary">Guardar</button>
            </div>
        </div>*@
        </form>
    </div>
