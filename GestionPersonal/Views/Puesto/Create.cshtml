@model GPSInformation.Models.Puesto

@{
    ViewData["Title"] = "Crear puesto";
}
<h4>@ViewData["Title"]</h4>
<br />
<div data-label="Informacion" class="df-example demo-forms">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="DPU" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                @*<input type="hidden" asp-for="IdPuesto" class="form-control" />*@
                <input asp-for="DPU" class="form-control" />
                <span asp-validation-for="DPU" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Nombre" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DescripcionPuesto" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="DescripcionPuesto" class="form-control" rows="5"></textarea>
                <span asp-validation-for="DescripcionPuesto" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="IdDepartamento" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="IdDepartamento" asp-items="ViewBag.Departamentos" class="custom-select">
                    <option value="0">Selecciona una dirección</option>
                </select>
                <span asp-validation-for="IdDepartamento" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SalarioMin" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="number" asp-for="SalarioMin" class="form-control" />
                <span asp-validation-for="SalarioMin" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SalarioMax" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="number" asp-for="SalarioMax" class="form-control" />
                <span asp-validation-for="SalarioMax" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="HoraEntrada" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="time" asp-for="HoraEntrada" class="form-control" />
                <span asp-validation-for="HoraEntrada" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="HoraSalida" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="time" asp-for="HoraSalida" class="form-control" />
                <span asp-validation-for="HoraSalida" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="IdUbicacion" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="IdUbicacion" asp-items="ViewBag.Ubicaciones" class="custom-select">
                    <option value="0">Selecciona una dirección</option>
                </select>
                <span asp-validation-for="IdUbicacion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="IdPuestoParent" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="IdPuestoParent" asp-items="ViewBag.Puestos" class="custom-select">
                    <option value="0">Selecciona una dirección</option>
                </select>
                <span asp-validation-for="IdPuestoParent" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mg-b-0">
            <div class="col-sm-12 text-right">
                <a asp-action="Index" class="btn btn-sm btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
            </div>
        </div>
    </form>
</div>