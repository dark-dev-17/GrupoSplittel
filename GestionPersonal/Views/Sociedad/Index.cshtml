@model IEnumerable<GPDataInformation.Models.Sociedad>
@{
    ViewData["Title"] = "Sociedades";
}

<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h4 class="panel-title pull-left" style="padding-top: 7.5px;">@ViewData["Title"]</h4>
        <div class="btn-group pull-right">
            <a href="#" class="btn btn-default btn-sm" onclick="" title="Refrescar contenido"><span class="glyphicon glyphicon-refresh"></span>Refrescar</a>
            <a asp-action="Create" class="btn btn-default btn-sm"  title="Registrar nuevo"><span class="glyphicon glyphicon-plus"></span>Nuevo</a>
        </div>
    </div>
    <div class="panel-body" id="list_departammets">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdSociedad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Direccion)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdSociedad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id=item.IdSociedad}) |
                                @Html.ActionLink("Details", "Details", new { id=item.IdSociedad }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.IdSociedad })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>