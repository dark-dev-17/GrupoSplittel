@model GPSInformation.Models.Usuario

@{
    ViewData["Title"] = "Create";
}
<div data-label="Informacion" class="df-example demo-forms">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                
                <input asp-for="UserName" placeholder="Nombre" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <label asp-for="Pass" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="Pass" placeholder="Nombre" class="form-control" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Activo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="Activo" placeholder="Nombre" class="form-control" />
                <span asp-validation-for="Activo" class="text-danger"></span>
            </div>
            <label asp-for="IdPersona" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="IdPersona" asp-items="ViewBag.Personas" class="form-control">
                    <option value="value">Selecciona un empleado</option>
                </select>
                <span asp-validation-for="IdPersona" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mg-b-0">
            <div class="col-sm-12 text-right">
                <a asp-action="Index" class="btn btn-sm btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
            </div>
        </div>
    </form>
</div>