@model IEnumerable<GPSInformation.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

    <h2>Departamentos</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table display compact">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDireccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaveDPU)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaveDPU)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdDepartamento })
            </td>
        </tr>
}
    </tbody>
</table>
