@model EcomDataProccess.Ecom_ProductoDescripcion
@{
    ViewData["Title"] = "Editar : "  + Model.Codigo;
}
<div id="app_blog_details">
    <div class="br-section-wrapper">
        <div class="table-wrapper">
            <div class="row">
                <div class="col-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Id" value="0" class="form-control" />
                            <label asp-for="Codigo" class="control-label"></label>
                            <input asp-for="Codigo" class="form-control disabled" readonly />
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label"></label>
                            <textarea asp-for="Descripcion" class="form-control"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DescripcionCEO" class="control-label"></label>
                            <textarea asp-for="DescripcionCEO" class="form-control"></textarea>
                            <span asp-validation-for="DescripcionCEO" class="text-danger"></span>
                        </div>
                        <div class="form-group  float-right">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            <input type="submit" value="Guardar cambios" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

