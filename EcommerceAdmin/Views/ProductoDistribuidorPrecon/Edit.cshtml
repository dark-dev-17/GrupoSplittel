@model EcomDataProccess.Ecom_ProductoDistribuidorPrecon
@{
    ViewData["Title"] = "Editar precio Distribuidor preconectorizador";
}
<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-6 mx-auto">
            <div class="jumbotron  mt-3" style="background-color: #fff">
                <div class="card text-center">
                    <div class="card-header">
                        @ViewData["Title"]
                    </div>
                    <div class="card-body">
                        <form asp-action="EditForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Id" type="hidden" class="form-control form-control-sm" />
                                <label asp-for="Tipo" class="control-label"></label>
                                <input asp-for="Tipo" class="form-control" readonly />
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Componente" class="control-label"></label>
                                <input asp-for="Componente" class="form-control" readonly />
                                <span asp-validation-for="Componente" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Cantidad" class="control-label"></label>
                                <input asp-for="Cantidad" value="@Html.Raw(Model.Cantidad == -1 ? "No aplica" : Model.Cantidad+"")" class="form-control" readonly />
                                <span asp-validation-for="Cantidad"  class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Precio" class="control-label"></label>
                                <input asp-for="Precio" class="form-control" />
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="button" onclick="window.open('', '_self', ''); window.close();" id="closeWindow" value="Cancelar" class="btn btn-default" />
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
